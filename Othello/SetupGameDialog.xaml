<Window x:Class="Othello.SetupGameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Setup Game" Height="220" Width="350">
    <StackPanel Margin="12">
        <TextBlock>Player 1 (Black):</TextBlock>
        <TextBox Name="Player1Name" Text="Player 1" Margin="0,4,0,8"/>
        <CheckBox Name="Player1IsComputer" Content="Computer" Margin="0,0,0,8"/>
        <TextBlock>Player 2 (White):</TextBlock>
        <TextBox Name="Player2Name" Text="Player 2" Margin="0,4,0,8"/>
        <CheckBox Name="Player2IsComputer" Content="Computer" Margin="0,0,0,8"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Click="Ok_Click" Margin="4">OK</Button>
            <Button Click="Cancel_Click" Margin="4">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
