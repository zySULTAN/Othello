<Window x:Class="Othello.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:Othello.Views"
        Title="Othello" Width="720" Height="720" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
            <Button x:Name="BtnNewGame" Content="New Game" Width="100" Margin="0,0,8,0" Click="BtnNewGame_Click"/>
            <Button x:Name="BtnExit" Content="Exit" Width="80" Click="BtnExit_Click"/>
            <TextBlock Text="Current: " VerticalAlignment="Center"/>
            <TextBlock x:Name="TxtCurrent" FontWeight="Bold" Margin="4,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Margin="16" BorderBrush="Gray" BorderThickness="1" CornerRadius="6" Padding="8">
            <v:GameGrid x:Name="BoardView"/>
        </Border>
    </DockPanel>
</Window>
